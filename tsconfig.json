{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "verbatimModuleSyntax": false,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
